{
  "root": true,
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "extends": [
    "plugin:import/recommended",
    "eslint-config-prettier"
  ],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"],
        "path": ["src"],
        "moduleDirectory": ["node_modules"]
      }
    }
  }
}
